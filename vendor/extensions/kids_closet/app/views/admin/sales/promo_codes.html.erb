<h1>Promo Codes for <%= @sale.franchise.franchise_name %>:<%= @sale.sale_dates %></h1>
<% render_region :above_content do |above_content| %>
  <% above_content.action_list do %>
    <%= link_to 'Back', admin_sale_url(@sale) %>
  <% end %>
<% end %>
<br /><br />
<div class="list_content" style="border: none;">
  <ul id="promo_codes_tab" class="subsection_tabs">
    <% render_region :tab_header do |tab_header| %>
      <% tab_header.promo_codes_tab_header do %>
        <li class="tab"><a href="#promo_codes">Promo Codes</a></li>
      <% end %>
    <% end %>
  </ul>
  <div class="clearfix"></div>
  <%= render_region :tabs %>
</div>
<% render_region :below_content do |below_content| %>
  <% below_content.tab_javascript do %>
    <%= javascript_include_tag ['livepipe/livepipe', 'livepipe/tabs'] %>
    <%= javascript_tag(
          "document.observe('dom:loaded',function(){\n" <<
          "new Control.Tabs('promo_codes_tab');\n" <<
          "});\n"
        )
    %>
  <% end %>
<% end %>