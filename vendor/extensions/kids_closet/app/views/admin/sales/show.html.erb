<h1><%= @sale.franchise.franchise_name %> Sale:<%= @sale.sale_dates %></h1>
<% render_region :above_content do |above_content| %>
  <% above_content.action_list do %>
    <%= link_to "Edit", edit_admin_franchise_sale_path(@sale.franchise, @sale) %> | <%= link_to 'Back', admin_franchise_url(@sale.franchise) %>
  <% end %> 
<% end %>
<br /><br />
<div class="list_content" style="border: none;">
  <ul id="sale_info_tabs" class="subsection_tabs">
    <% render_region :tab_header do |tab_header| %>
      <% tab_header.sale_info_tab_header do %>
        <li class="tab"><a href="#sale_info_tab_id">Sale Information</a></li>
      <% end %>
      <% tab_header.sale_pdf_tab_header do %>
        <li class="tab"><a href="#sale_pdf_tab_id">Sale PDF</a></li>
      <% end %>
    <% end %>
  </ul>
  <div class="clearfix"></div>
  <%= render_region :tabs %>
</div>
<% render_region :below_content do |below_content| %>
  <% below_content.tab_javascript do %>
    <%= javascript_include_tag ['livepipe/livepipe', 'livepipe/tabs'] %>
    <%= javascript_tag(
          "document.observe('dom:loaded',function(){\n" <<
          "new Control.Tabs('sale_info_tabs');\n" <<
          "});\n"
        )
    %>
  <% end %>
<% end %>