<% form_tag consignors_admin_sale_url(@sale), {:method => 'get', :id => 'consignor_sort_form', :autocomplete => 'off'} do %>
  <h3>Search Options</h3>
  <p>
    Phrase: <%= text_field_tag 'signed_up_consignor_search[phrase]', @signed_up_consignor_search.phrase %><br>
    Sort: <%= select_tag 'signed_up_consignor_search[sort_order]', options_for_select(Sale.consignor_sort_options, @signed_up_consignor_search.sort_order) %> <%= submit_tag 'Go', :disable_with => "Searching..." %> <%= submit_tag 'Clear', :name => "clear", :disable_with => "Clearing..." %>
    <br />
  </p>
<% end %>
