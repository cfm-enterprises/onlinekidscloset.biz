<div class="list_content" id="franchise_sales_tab_id">
  <table class="list_table">
    <thead>
      <tr>
        <% render_region :franchise_sale_list_headers do |list_headers| %>
          <% list_headers.sale_dates_column_header do %><th>Dates</th><% end %>
          <% list_headers.sale_address_column_header do %><th>Address</th><% end %>
          <% list_headers.active_sale_column_header do %><th>Active Sale?</th><% end %>
          <% list_headers.actions_column_header do %><th>Actions</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @sales.length == 0 %>
        <tr><td colspan="<%= admin_interface.franchises.show.franchise_sale_list_data.length %>" class="no_entries">No Sales Assigned to this Franchise</td></tr>
      <% else %>
         <%= render :partial => 'sale', :collection => @sales %>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= empty_pagination_div %>
    <% end %>
  <% end %>
  <div class="action_row">
    <% render_region :franchise_sales_action_row do |action_row| %>
      <% action_row.new_franchise_sale do %>
        <%= link_to 'Add Sale', new_admin_franchise_sale_path(@franchise.id) %>
      <% end %>
    <% end %>
  </div>
</div>