<h1><%= @franchise.franchise_name %></h1>
<% render_region :above_content do |above_content| %>
  <% above_content.action_list do %>
    <%= link_to "Edit", edit_admin_franchise_path(@franchise) %> | <%= link_to 'Back', admin_franchises_path %>
  <% end %>
<% end %>
<br /><br />
<div class="list_content" style="border: none;">
  <ul id="franchise_info_tabs" class="subsection_tabs">
    <% render_region :tab_header do |tab_header| %>
      <% tab_header.franchise_sales_tab_header do %>
        <li class="tab"><a href="#franchise_sales_tab_id">Franchise Sales</a></li>
      <% end %>
      <% tab_header.mini_content_tab_header do %>
        <li class="tab"><a href="#mini_content_tab_id">Franchise Mini Content</a></li>
      <% end %>
      <% tab_header.franchise_info_tab_header do %>
        <li class="tab"><a href="#franchise_info_tab_id">Franchise Information</a></li>
      <% end %>
      <% tab_header.franchise_owners_tab_header do %>
        <li class="tab"><a href="#franchise_owners_tab_id">Franchise Owners</a></li>
      <% end %>
    <% end %>
  </ul>
  <div class="clearfix"></div>
  <%= render_region :tabs %>
</div>
<% render_region :below_content do |below_content| %>
  <% below_content.tab_javascript do %>
    <%= javascript_include_tag ['livepipe/livepipe', 'livepipe/tabs'] %>
    <%= javascript_include_tag :fckeditor %>
    <%= javascript_tag(
          "document.observe('dom:loaded',function(){\n" <<
          "new Control.Tabs('franchise_info_tabs');\n" <<
          "});\n"
        )
    %>
  <% end %>
<% end %>