<h1>Sales for <%= @sale_season.season_name %></h1>
<% render_region :above_content do |above_content| %>
  <% above_content.action_list do %>
    <%= link_to "Edit Season", edit_admin_sale_season_path(@sale_season) %> | <%= link_to 'Back', admin_sale_seasons_url %>
  <% end %>
<% end %>
<br /><br />
<div class="list_content" style="border: none;">
  <ul id="season_sales_tab" class="subsection_tabs">
    <% render_region :tab_header do |tab_header| %>
      <% tab_header.season_sales_tab_header do %>
        <li class="tab"><a href="#season_sales_tab_id">Sales in Season</a></li>
      <% end %>
    <% end %>
  </ul>
  <div class="clearfix"></div>
  <%= render_region :tabs %>
</div>
<% render_region :below_content do |below_content| %>
  <% below_content.tab_javascript do %>
    <%= javascript_include_tag ['livepipe/livepipe', 'livepipe/tabs'] %>
    <%= javascript_tag(
          "document.observe('dom:loaded',function(){\n" <<
          "new Control.Tabs('season_sales_tab');\n" <<
          "});\n"
        )
    %>
  <% end %>
<% end %>