<h1>Sale Seasons</h1>
<div class="list_content">
  <%= render_region :before_list %>
  <table class="list_table">
    <thead>
      <tr>
        <% render_region :list_headers do |list_headers| %>          
          <% list_headers.season_name_column_header do %><th>Name</th><% end %>
          <% list_headers.dates_column_header do %><th>Dates</th><% end %>
          <% list_headers.number_of_sales_column_header do %><th># of Sales</th><% end %>
          <% list_headers.actions_column_header do %><th>Actions</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @sale_seasons.length == 0 %>
        <tr><td colspan="<%= admin_interface.sale_seasons.index.list_data.length %>" class="no_entries">No Sale Seasons Exist</td></tr>
      <% else %>
         <%= render :partial => 'sale_season', :collection => @sale_seasons %>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= empty_pagination_div %>
    <% end %>
  <% end %>
  <div class="action_row">
    <% render_region :action_row do |action_row| %>
      <% action_row.new_sale_season do %>
        <%= link_to 'Add Season', new_admin_sale_season_url %>
      <% end %>
    <% end %>
  </div>
</div>
