<% field_set_tag "#{save_label} Drop of Time for #{@sale_consignor_time.sale.franchise.franchise_name}:#{@sale_consignor_time.sale.sale_dates}" do -%>
  <%= error_messages_for :sale_consignor_time %>
  <% render_region :form, :locals => { :f => f } do |form| %>
    <% form.edit_sale_id do %>
      <%= f.hidden_field :sale_id %>
    <% end %>
    <% form.edit_date do %>
      <%= f.date_select :date, :label => "Drop Off Date:" %>
    <% end %>
    <% form.edit_start_time do %>
      <div class="date-field "><label for="sale_consignor_time_date">Start Time:</label><div class="input"><%= f.time_select :start_time, :twelve_hour => true, :minute_step => 5 %></div></div>
    <% end %>
    <% form.edit_end_time do %>
      <div class="date-field "><label for="sale_consignor_time_date">End Time:</label><div class="input"><%= f.time_select :end_time, :twelve_hour => true, :minute_step => 5 %></div></div>
    <% end %>
    <% form.edit_number_of_spots do %>
      <%= f.text_field :number_of_spots, :label => "Spots Available:" %>
    <% end %>
  <% end %>
  <% render_region :form_bottom, :locals => { :f => f } do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back save_label, admin_sale_sale_consignor_times_url(@sale_consignor_time.sale) %>
    <% end %>
  <% end %>
<% end %>