<% field_set_tag "Assign Helper to this Drop Off Time" do -%>
  <%= error_messages_for :sale_volunteer_sign_up %>
  <% render_region :index_form, :locals => { :f => f } do |form| %>
    <% form.edit_volunteer_time_id do %>
      <%= f.hidden_field :sale_volunteer_time_id %>
    <% end %>      
    <% form.edit_volunteer_profile_id do %>
      <%= f.select :franchise_profile_id, @available_volunteers.collect { |volunteer_profile| ["#{volunteer_profile.profile.full_name}", volunteer_profile.id] }, :include_blank => "&lt;Select One&gt;", :label => "Helper:", :required => true %>
    <% end %>      
  <% end %>
  <% render_region :index_form_bottom, :locals => { :f => f } do |form_bottom| %>
    <% form_bottom.edit_index_buttons do %>
      <%= f.submit_or_back 'Assign Helper', admin_sale_sale_volunteer_times_path(@sale_volunteer_time.sale) %>
    <% end %>
  <% end %>
<% end %>