<h1>Franchise Reward Adjustments for <%= @franchise.franchise_name %></h1>
<% render_region :top do |top| %>
  <% top.pagination_counts do %>
    <p><%= will_paginate_record_display(@franchise_rewards_adjustments) %></p>
  <% end %>
<% end %>
<div class="list_content">
  <%= render_region :before_list %>
  <table class="franchise_rewards_adjustment_index list_table" id="franchise_rewards_adjustment_index_id">
    <thead>
      <tr>
        <% render_region :list_headers do |list_headers| %>
          <% list_headers.rewards_number_column_header do %><th>Rewards Number</th><% end %>
          <% list_headers.name_column_header do %><th>Name</th><% end %>
          <% list_headers.amount_column_header do %><th>Amount</th><% end %>
          <% list_headers.comment_column_header do %><th>Comment</th><% end %>
          <% list_headers.actions_column_header do %><th>Actions</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @franchise_rewards_adjustments.length == 0 %>
        <tr><td colspan="<%= admin_interface.franchise_rewards_adjustments.index.list_data.length %>" class="no_entries">No Adjustments Added to this Franchise</td></tr>
      <% else %>
         <%= render :partial => 'franchise_rewards_adjustment', :collection => @franchise_rewards_adjustments %>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= will_paginate_links(@franchise_rewards_adjustments) %>
    <% end %>
  <% end %>
  <div class="action_row">
    <% render_region :action_row do |action_row| %>
      <% action_row.back_to_franchise_link do %>
        <%= link_to "Add Closet Cash to a Rewards Card", new_admin_franchise_franchise_rewards_adjustment_url(@franchise) %> | <%= link_to "Back", admin_franchise_url(@franchise) %>
      <% end %>
    <% end %>
  </div>
</div>
<%= render_region :bottom %>